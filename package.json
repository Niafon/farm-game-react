{
  "name": "farm-game-react",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "dev:server": "node --env-file=.env --experimental-strip-types server/index.js",
    "build": "tsc -b && vite build",
    "build:ci": "node scripts/validate-env.cjs && tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:contracts:gas": "REPORT_GAS=1 hardhat test",
    "coverage:sol": "hardhat coverage",
    "lint:sol": "solhint 'contracts/**/*.sol' || true",
    "analyze": "vite build --mode analyze && echo Open bundle-stats.html",
    "audit": "npm audit --omit=dev && npx depcheck",
    "hh:compile": "hardhat compile",
    "hh:deploy": "hardhat run --network monad scripts/deploy.cjs",
    "hh:verify": "hardhat verify --network monad",
    "hh:verify:addr": "hardhat verify --network monad %1",
    "hh:test": "hardhat test"
  },
  "dependencies": {
    "@rainbow-me/rainbowkit": "^2.2.8",
    "@sentry/react": "^10.5.0",
    "@sentry/tracing": "^7.120.4",
    "@tanstack/query-sync-storage-persister": "^5.83.1",
    "@tanstack/react-query-persist-client": "^5.85.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "viem": "^2.22.7",
    "wagmi": "^2.12.7",
    "zod": "^3.25.76",
    "use-sync-external-store": "^1.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@sentry/browser": "^8.35.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.4.1",
    "dotenv": "^16.4.5",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "hardhat": "^2.22.15",
    "hardhat-gas-reporter": "^1.0.10",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "solhint": "^4.5.4",
    "solidity-coverage": "^0.8.8",
    "ts-jest": "^29.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.33.1",
    "vite": "^6.3.5"
  }
}
